<div class="col-md-4">
	<%= form_for @order do |form| %>
		<div class="form-group">
			<%= form.label :total %>
			<%= form.text_field :total, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= form.label :status %>
			<%= form.text_field :status, class: "form-control" %>
		</div>
		<%= form.submit class: "btn btn-primary" %>
	<% end %>
</div>

