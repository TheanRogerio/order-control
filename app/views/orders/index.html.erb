<% if notice %>
	<p class="alert alert-success" id="notice"><%= notice %></p>
<% end %>

<h1>Pedidos</h1>

<table class="table">
	<thead>
		<tr>
			<th>Total</th>
			<th>Status</th>
			<th>Criado em</th>
			<th>Atualizado em</th>
			<th></th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @orders.each do |order| %>
			<tr>
				<td><%= order.total %></td>
				<td><%= order.status %></td>
				<td><%= order.created_at %></td>
				<td><%= order.updated_at %></td>
				<td>
					<%= link_to 'Mostrar', order_path(order), class: 'btn btn-secondary' %>
				</td>
				<td>
					<%= link_to 'Editar', edit_order_path(order), class: 'btn btn-primary' %>
				</td>
				<td>
					<%= link_to 'Excluir', order, method: :delete, data: {confirm: 'Deseja excluir este pedido?'}, class: 'btn btn-danger' %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'Novo pedido', new_order_path, class: 'btn btn-info' %>