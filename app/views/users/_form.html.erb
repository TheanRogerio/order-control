<div class="col-md-4">
	<%= form_for @item do |form| %>
		<div class="form-group">
			<%= form.label :name %>
			<%= form.text_field :name, class: "form-control" %>
		</div>
		<div class="form-group">
			<%= form.label :email %>
			<%= form.text_field :email, class: "form-control" %>
		</div>
		<%= form.submit class: "btn btn-primary" %>
	<% end %>
</div>

